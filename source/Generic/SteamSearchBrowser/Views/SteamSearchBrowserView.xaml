<UserControl x:Class="SteamSearchBrowser.Views.SteamSearchBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamSearchBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </Grid.Resources>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Search and Results -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Search Box -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="{DynamicResource FontSizeLarge}"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Padding="10,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1" 
                            Content="Search" 
                            Command="{Binding SearchCommand}"
                            Margin="10,0,0,0"
                            Height="40"
                            Padding="20,0"
                            FontSize="{DynamicResource FontSizeLarge}"/>
                </Grid>

                <!-- Status Message -->
                <TextBlock Grid.Row="1" 
                           Text="{Binding StatusMessage}"
                           Margin="0,10,0,0"
                           FontSize="{DynamicResource FontSize}"
                           Foreground="{DynamicResource TextBrushDarker}"/>

                <!-- Loading Indicator -->
                <StackPanel Grid.Row="2" 
                            Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisConverter}}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Searching Steam..."
                               FontSize="{DynamicResource FontSizeLargest}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <ProgressBar IsIndeterminate="True" Width="300" Height="6"/>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel Grid.Row="2"
                            Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVisConverter}}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="🔍"
                               FontSize="72"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"
                               Opacity="0.5"/>
                    <TextBlock Text="Search for games on Steam"
                               FontSize="{DynamicResource FontSizeLargest}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Enter a game name above and press Search"
                               FontSize="{DynamicResource FontSize}"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextBrushDarker}"/>
                </StackPanel>

                <!-- Results Grid -->
                <ListBox Grid.Row="2" 
                         Name="ListBoxGames" 
                         Margin="0,10,0,0" 
                         ItemsSource="{Binding SteamGames}" 
                         SelectedItem="{Binding SelectedSteamGame}" 
                         IsSynchronizedWithCurrentItem="True"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisConverter}}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="3" Background="#33000000">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Bottom" 
                                               Text="{Binding Name}"
                                               Margin="0,3,0,0" 
                                               Width="150"
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Center" 
                                               TextTrimming="CharacterEllipsis"/>
                                    <Image Width="150" 
                                           Height="225"
                                           Source="{Binding HeaderImage, IsAsync=True, Converter={StaticResource ImageStringToImageConverter}}"
                                           DockPanel.Dock="Top"
                                           Stretch="Uniform" 
                                           StretchDirection="Both" 
                                           HorizontalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Right Panel: Game Details -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.Style>
                    <Style TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=ListBoxGames, Path=SelectedItem}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Game Header -->
                <StackPanel Grid.Row="0">
                    <TextBlock FontSize="{DynamicResource FontSizeLargest}" 
                               TextWrapping="Wrap" 
                               Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Name}" 
                               VerticalAlignment="Center"/>
                    
                    <!-- Game Metadata -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Developer:"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Margin="10,5,0,0"
                                   Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Developers, Converter={StaticResource ListToStringConverter}}"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Publisher:"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Margin="10,5,0,0"
                                   Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Publishers, Converter={StaticResource ListToStringConverter}}"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="Genre:"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Margin="10,5,0,0"
                                   Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Genres, Converter={StaticResource ListToStringConverter}}"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Content="Release Date:"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   Margin="10,5,0,0"
                                   Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.ReleaseDate, StringFormat='{}{0:MMM dd, yyyy}'}"/>
                        
                        <Label Grid.Row="4" Grid.Column="0" Content="Price:"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                   Margin="10,5,0,0"
                                   Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Price}"/>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="View on Steam" 
                                Command="{Binding StoreViewCommand}" 
                                CommandParameter="{Binding SelectedItem, ElementName=ListBoxGames}" 
                                Padding="15,8"/>
                        <Button Margin="10,0,0,0" 
                                Content="Add to Library" 
                                Command="{Binding AddGameToLibraryCommand}" 
                                CommandParameter="{Binding SelectedItem, ElementName=ListBoxGames}" 
                                Padding="15,8"
                                IsEnabled="{Binding AddButtonEnabled}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Game Description -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              Margin="0,20,0,0" 
                              Grid.Row="1">
                    <TextBlock TextWrapping="Wrap"
                               Text="{Binding ElementName=ListBoxGames, Path=SelectedItem.Description}"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
